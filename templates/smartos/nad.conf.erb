{
    "check": {
        "type": "json",
        "period": 60,
        "timeout": 10,
        "metrics": {
            "numeric": [
                "cpu`kernel`sys",
                "cpu`kernel`guest",
                "cpu`kernel`guest_nice",
                "ohai`filesystem`/`percent_used",
                "vminfo`unix:0:vminfo:freemem"
            ],
            "text": []
        },
        "config": {
            "port": 2609
        }
    },
    "graphs": {
        "CPU": {
            "max_left_y": 100,
            "style": "area",
            "datapoints": [
                {
                    "name": "kernel-sys",
                    "metric_name": "cpu`kernel`sys",
                    "metric_type": "numeric",
                    "axis": "l",
                    "stack": 0,
                    "derive": "counter",
                    "hidden": false,
                    "alpha": 0.3
                },
                {
                    "name": "kernel-guest",
                    "metric_name": "cpu`kernel`guest",
                    "metric_type": "numeric",
                    "axis": "l",
                    "stack": 0,
                    "derive": "counter",
                    "hidden": false,
                    "alpha": 0.3
                },
                {
                    "name": "kernel-guest_nice",
                    "metric_name": "cpu`kernel`guest_nice",
                    "metric_type": "numeric",
                    "axis": "r",
                    "stack": null,
                    "derive": "counter",
                    "hidden": false,
                    "color": "#ff0000"
                }
            ]
        },
        "Disk": {
            "max_left_y": 100,
            "style": "area",
            "datapoints": [
                {
                    "name": "% used: /",
                    "metric_name": "ohai`filesystem`/`percent_used",
                    "metric_type": "numeric",
                    "axis": "l",
                    "stack": null,
                    "derive": "gauge",
                    "hidden": false,
                    "alpha": 0.3
                }
            ]
        },
        "Memory": {
            "style": "area",
            "datapoints": [
                {
                    "name": "free memory",
                    "metric_name": "vminfo`unix:0:vminfo:freemem",
                    "metric_type": "numeric",
                    "axis": "l",
                    "stack": null,
                    "derive": "counter",
                    "hidden": false,
                    "alpha": 0.3
                }
            ]
        }
    }
}
